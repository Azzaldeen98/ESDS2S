<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="0dp">

        <TextView
            android:id="@+id/internal_head_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="0dp"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24"
            android:drawableTint="@color/page_title"
            android:padding="10dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/internal_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="start"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="@string/chat_info_page"
            android:textColor="@color/page_title"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/txtStartLocation"
        android:layout_alignStart="@+id/txtStartLocation"
        android:background="@color/page_title"
        android:visibility="visible" />

</LinearLayout>