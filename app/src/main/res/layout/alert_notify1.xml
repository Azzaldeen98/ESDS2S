<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_notify"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    android:padding="5px"
    android:background="@drawable/rounded_top"
    android:backgroundTint="@color/white"
    android:animation="@anim/entry_to_top_animation"
    android:orientation="vertical"
    android:textColor="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:padding="10dp">

<!--        <Button-->
<!--            android:id="@+id/alert_btn_close"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="end"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:onClick="hiddenNotifyDialog"-->
<!--            android:background="@drawable/baseline_close_24" />-->

        <ImageView

            android:id="@+id/top_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/baseline_info_24" />

    </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/alert_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="message"
                    android:layout_margin="10dp"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/alert_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="message"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textDirection="rtl"
                    android:textSize="20dp"/>



            </LinearLayout>

    <Button
        android:id="@+id/BtnResendEmail"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rpass"
        android:visibility="gone"
        android:autoLink="none"
        android:layout_margin="10dp"
        android:backgroundTint="#D8D5DD"
        android:pointerIcon="hand"
        android:textAllCaps="false"
        android:text="Resend  Verification link to email  "
        android:textColor="@color/purple_500"
        android:textSize="20dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="30dp"
                    android:gravity="end"
                    android:layoutDirection="ltr">

                <TextView
                    android:id="@+id/alert_btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/baseline_close_24"
                    android:drawableTint="@color/black"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="7dp"
                    android:backgroundTint="@color/white"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            <TextView
                android:id="@+id/alert_btn_ok"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:paddingVertical="7dp"
                android:background="@color/purple_500"
                android:text="@string/btn_yes"
                android:textColor="#FFF"
                android:textSize="20dp" />

        </RelativeLayout>



</LinearLayout>


</LinearLayout>