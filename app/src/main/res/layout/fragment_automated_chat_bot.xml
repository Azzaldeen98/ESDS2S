<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AutomatedChatBotFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerCarsPlate"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_dropdown"
            android:foregroundTint="#191717"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:tooltipText="car.No"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            tools:visibility="visible" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/robot1"
            android:backgroundTint="@color/white"
            android:background="@color/white"/>


        <Button
            android:id="@+id/btn_automated_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:text="@string/atomated_chat_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_close_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:visibility="gone"
            android:paddingHorizontal="30dp"
            android:text="@string/btn_close_service"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/background_notify_dialog1"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:background="@color/back_notify_color">
        <include layout="@layout/alert_notify1" />
    </LinearLayout>
</FrameLayout>